
-- Generic print with static dispatch
-- Print is a statement
syntax print -> statement {
    parse {
        `print`;
        `->`;
        value: $expr;
        `;`; -- Macros must end with a semicolon
    }

    eval {
        if $value is int {
            <`std::core::print($value);`>;
        } else {
            comp::raise("Invalid print type $value.type");
        }
    }
}

def entry() {
    print -> 10;
}
